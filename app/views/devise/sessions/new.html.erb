<div class="grid place-items-center mt-[10vh] w-[60%] py-10 mx-auto">
  <h1 class="text-6xl font-medium">войти в аккаунт</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-7" }) do |f| %>

    <div class="flex flex-col gap-2 text-2xl">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Электронная почта' %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Пароль' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-1.5 mt-2 mb-4">
        <%= f.check_box :remember_me %>
        <h1>запомнить меня</h1>
      </div>
    <% end %>

    <%= f.submit "Log in", class: 'block w-full !mt-3 px-5 py-2 text-lg text-center font-book border-2 duration-200 rounded-10 bg-black text-white border-transparent hover:opacity-[85%]' %>

  <% end %>

  <%#= render "devise/shared/links" %>

</div>
