<h1>Tattoos</h1>

<% if notice.present? %>
  <%= content_tag(:p, notice, class: 'inline-block px-3 py-2 mb-5 font-medium bg-slate-700', id: 'notice') %>
<% end %>

<h3>Tags</h3>
<section class="flex flex-wrap gap-5">
  <% Tattoo.tag_counts_on(:tags).each do |tag| %>
    <%= link_to tagged_tattoos_path(tag.name) do %>
      <div class="p-2 border border-[#1095c1] flex gap-2 items-center group hover:border-white duration-200">
        <mark class="bg-[#1095c1 group-hover:bg-white duration-200"><%= tag.name %></mark> <%= tag.taggings_count %>
      </div>
    <% end %>
  <% end %>
</section>

<hr>

<h3>Styles</h3>
<section class="flex flex-wrap gap-5">
  <% Tattoo.tag_counts_on(:styles).each do |style| %>
    <%= link_to tagged_tattoos_path(style.name) do %>
      <div class="p-2 border border-[#1095c1] flex gap-2 items-center group hover:border-white duration-200">
        <mark class="bg-[#1095c1 group-hover:bg-white duration-200"><%= style.name %></mark> <%= style.taggings_count %>
      </div>
    <% end %>
  <% end %>
</section>

<hr>

<div id="tattoos card">
  <% @tattoos.each do |tattoo| %>
    <% master = tattoo.master %>
    <%= link_to tattoo do %>
      <%= render partial: 'tattoos/tattoo', locals: { master: master, tattoo: tattoo } %>
    <% end %>
  <% end %>
</div>
