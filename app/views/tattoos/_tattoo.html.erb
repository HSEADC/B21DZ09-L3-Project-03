<article id="<%= dom_id tattoo %>" class="relative bg-white border-2 border-black rounded-[35px] px-5 pt-5 pb-14">

  <% if tattoo.tattoo_image.present? %>
    <%= link_to tattoo do %>
      <%= image_tag tattoo.tattoo_image.url, class: "object-cover rounded-[20px] h-[40vh] w-full border-2 border-black" %>
    <% end %>
  <% end %>

  <div class="flex flex-col mt-4">
    <%= link_to tattoo, class:"hover:no-underline" do %>
      <h4 class="text-3xl font-medium tracking-[-0.03em]">
        <%= tattoo.title %>
      </h4>
    <% end %>

    <% if @display_master == true %>
      <h4 class="text-xl tracking-[-0.02em]">
        <%= link_to tattoo.master.nickname, master_path(tattoo.master) %>
      </h4>
    <% end %>
  </div>

  <% if can_modify_tattoo?(tattoo) %>
    <div class="mt-5">
      <%= link_to "Edit this tattoo", edit_master_tattoo_path(tattoo.master, tattoo) %>
      <%= button_to "Destroy this tattoo", tattoo, method: :delete %>
    </div>
  <% end %>

  <% if false %>
    <div class="absolute bottom-0 right-0 mt-1">
      <% tattoo.part_list.each do |part| %>
        <mark class="px-1 py-[2px] bg-white"><%= part %></mark>
      <% end %>

      <% tattoo.style_list.each do |style| %>
        <mark class="bg-[#8d8d8d] px-1 py-[2px]"><%= style %></mark>
      <% end %>
    </div>
  <% end %>

  <%= render 'tattoos/favourite_button', tattoo: tattoo %>

</article>
