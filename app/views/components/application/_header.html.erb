<header class="flex w-[90%] mx-auto gap-7 mt-5 text-2xl">
  <%= link_to(root_path, class: 's-16') do %>
    <%= image_tag('logo.svg', class: 'hover:scale-[107%] duration-300', alt: 'Логотип INKZ') %>
  <% end %>

  <nav class="flex items-center justify-between w-full tracking-small ">
    <% if current_user&.is_admin? %>
      <ul class="flex gap-5">
        <li><%= link_to "Татуировки", admin_tattoos_url%></li>
        <li><%= link_to "Мастера", admin_masters_url %></li>
        <li><%= link_to "Отзывы", admin_feedbacks_url %></li>
        <li><%= link_to "Почты", admin_subscriptions_url %></li>
      </ul>
    <% else %>
      <ul class="flex gap-5">
        <li><%= link_to "Татуировки", tattoos_url %></li>
        <li><%= link_to "Мастера", masters_url %></li>
      </ul>
    <% end %>

    <ul class="flex items-center gap-7">
      <input class="py-3 text-xl border-2 border-black placeholder:text-black w-[20vw] rounded-xl focus:border-black ring-" type="text" placeholder="Поиск">

      <li class="flex gap-3 text-2xl">
        <% if user_signed_in? %>
          <%= link_to current_user.email, edit_user_registration_path %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "Log in", new_user_session_path %>
          <%= link_to "Register", new_user_registration_path %>
        <% end %>
      </li>
    </ul>
  </nav>
</header>
