<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medim bg-slate-700" id="notice"><%= notice %></p>
    <% end %>

    <%= render partial: 'feedbacks/feedback', locals: { feedback: @feedback, master: @master } %>

    <%= link_to "Edit this feedback", edit_feedback_path(@feedback) %>
    <%= button_to "Destroy this feedback", feedback_path(@feedback), method: :delete%>
  </div>
</div>
