<%= form_with(model: [master, feedback]) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :comment %>
    <%= form.text_area :comment, rows: 4 %>
  </div>

  <div class="my-5">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 0..5, step: 1 %>
  </div>

  <div class="inline">
    <%= form.submit %>
  </div>
<% end %>
