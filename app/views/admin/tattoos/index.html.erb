<% if notice.present? %>
  <%= content_tag(:p, notice, class: 'inline-block px-3 py-2 mb-5 font-medium bg-black text-white', id: 'notice') %>
<% end %>

<h3 class="mt-10">Parts</h3>
<section class="flex flex-wrap gap-5">
  <% Tattoo.tag_counts_on(:parts).each do |part| %>
    <%= link_to parted_admin_tattoos_path(part.name) do %>
      <div class="flex items-center gap-2 px-4 py-2 text-white duration-300 bg-black border-2 border-black rounded-lg hover:scale-105">
        <%= part.name %> <mark class="px-2 bg-white rounded-sm"><%= part.taggings_count %></mark>
      </div>
    <% end %>
  <% end %>
</section>

<h3 class="mt-3">Styles</h3>
<section class="flex flex-wrap gap-5">
  <% Tattoo.tag_counts_on(:styles).each do |style| %>
    <%= link_to styled_admin_tattoos_path(style.name) do %>
      <div class="flex items-center gap-2 px-4 py-2 duration-300 border-2 border-black rounded-lg hover:scale-105">
        <%= style.name %> <mark class="px-2 border-2 border-black rounded-md"><%= style.taggings_count %></mark>
      </div>
    <% end %>
  <% end %>
</section>

<table class="mt-10 border-t-2 border-black ">
  <thead>
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Title</th>
      <th scope="col">Tag</th>
      <th scope="col">Style</th>
      <th scope="col">Master</th>
      <th scope="col">User</th>
      <th scope="col">Created at</th>
      <th scope="col">Updated at</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <div class="tattoos admin card">
      <% @tattoos.each do |tattoo| %>
        <%= render partial: 'tattoo', locals: { tattoo: tattoo } %>
      <% end %>
    </div>
  </tbody>
</table>