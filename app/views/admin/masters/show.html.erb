<p class="inline-block px-3 py-2 mb-5 font-medim bg-slate-700" id="notice"><%= notice %></p>
<table role="grid">
  <tbody>
    <%= render partial: 'admin/masters/master', locals: { master: @master } %>
  </tbody>
</table>
<hr>
<h2>Tattoos:</h2>
<%= link_to "New tattoo", new_admin_master_tattoo_path(@master) %>
<div id="tattoos-card">
  <% @tattoos.each do |tattoo| %>
    <div class="tattoo-card">
      <%= link_to admin_tattoo_path(tattoo) do %>
        <table role="grid">
          <tbody>
            <%= render partial: "admin/tattoos/tattoo", locals: { master: @master, tattoo: tattoo } %>
          </tbody>
        </table>
      <% end %>
    </div>
  <% end %>
</div>
