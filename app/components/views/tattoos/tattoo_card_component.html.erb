<article id="<%= dom_id @tattoo %>" class="relative aspect-square h-[45vh] group">

  <%= link_to @tattoo do %>
    <%= image_tag @tattoo.tattoo_image.url, class: "object-cover s-full" %>
  <% end %>

  <% if @show_tags %>
    <div class="absolute mt-1 bottom-3 left-3">
      <% @tattoo.part_list.each do |part| %>
        <%= render(Ui::MarkComponent.new(text: part, className: 'bg-black text-white')) %>
      <% end %>

      <% @tattoo.style_list.each do |style| %>
        <%= render(Ui::MarkComponent.new(text: style, className: 'bg-white')) %>
      <% end %>
    </div>
  <% end %>

  <%= link_to tattoos_path do %>
    <%= image_tag "icons/add.svg", class: "object-cover s-14 absolute hidden p-4 duration-300 bg-black bottom-3 right-3 group-hover:block hover:bg-opacity-70" %>
  <% end %>

</article>