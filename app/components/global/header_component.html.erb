<header class="<%= Constants::WEBSITE_WIDTH %> flex items-center justify-between text-2xl mt-7 lg:text-xl tracking-small">

  <nav class="flex items-end gap-7">
    <%= link_to(root_path, class: 'h-10') do %>
      <%= image_tag('logo.png', class: 'hover:scale-105 duration-300 s-full', alt: 'Логотип inkz') %>
    <% end %>

    <% if admin? %>
      <ul class="flex gap-4">
        <li><%= link_to "Татуировки", admin_tattoos_url %></li>
        <li><%= link_to "Мастера", admin_masters_url %></li>
        <li><%= link_to "Отзывы", admin_feedbacks_url %></li>
        <li><%= link_to "Почты", admin_subscriptions_url %></li>
      </ul>
    <% end %>
  </nav>

  <% if user_signed_in? %>
    <div class="flex gap-4 sm:flex-col sm:gap-0">
      <%= link_to @current_user.email, edit_user_registration_path %>
      <%= link_to "Выйти", destroy_user_session_path, method: :delete %>
    </div>
  <% else %>
    <div class="flex gap-4">
      <%= link_to "Войти", new_user_session_path %>
      <%= link_to "Регистрация", new_user_registration_path %>
    </div>
  <% end %>

</header>